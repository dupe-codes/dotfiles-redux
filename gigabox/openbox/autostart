# Source environment variables
. "${HOME}/.gigabox"
xrdb "${HOME}/.Xresources"

picom -b
dunst &
xfce4-power-manager &
nm-applet &
1password --silent &
parcellite &
blueman-applet &

# MPD daemon start (if no other user instance exists)
[ ! -s /tmp/mpd.pid ] && mpd &

# Configure displays
autorandr --change &
sleep 2s && nitrogen --restore &

# Launch Polybar
bash ~/.config/polybar/blocks/launch.sh

xset r rate 200 40 # keyboard repeat delay and interval

