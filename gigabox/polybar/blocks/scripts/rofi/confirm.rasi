/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fga;
	font:				 	"BerkeleyMono Nerd Font Mono 14";
}

window {
    width:      			400px;
    padding:    			25px;
    border:					0px 0px 4px 0px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
